@model AdvertisementModel
<div class="content">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-3">
                        <ags-label asp-for="PictureId" />
                    </div>
                    <div class="col-md-9">
                        <ags-editor asp-for="PictureId"  />
                        <span asp-validation-for="PictureId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <ags-label asp-for="SectionId" />
                    </div>
                    <div class="col-md-9">
                        <ags-select asp-for="SectionId"  asp-items="@Model.AvailableSections" asp-required="true"/>
                    <span asp-validation-for="SectionId" class="text-danger"></span>
                    </div>


                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <ags-label asp-for="TargetId" />
                    </div>
                    <div class="col-md-9">
                        <ags-editor asp-for="TargetId" />
                        <span asp-validation-for="TargetId" class="text-danger"></span>
                    </div>


                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <ags-label asp-for="CodeFlash" />
                    </div>
                    <div class="col-md-9">
                        <ags-textarea asp-for="CodeFlash" />
                        <span asp-validation-for="CodeFlash" class="text-danger"></span>
                    </div>


                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <ags-label asp-for="FlashCode" />
                    </div>
                    <div class="col-md-9">
                        <ags-textarea asp-for="FlashCode" />
                        <span asp-validation-for="FlashCode" class="text-danger"></span>
                    </div>


                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <ags-label asp-for="UrlAddress" />
                    </div>
                    <div class="col-md-9">
                        <ags-editor asp-for="UrlAddress" />
                        <span asp-validation-for="UrlAddress" class="text-danger"></span>
                    </div>


                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <ags-label asp-for="StartDate" />
                    </div>
                    <div class="col-md-9">
                        <ags-editor asp-for="StartDate" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>


                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <ags-label asp-for="EndDate" />
                    </div>
                    <div class="col-md-9">
                        <ags-editor asp-for="EndDate" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>


                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <ags-label asp-for="IsApproved" />
                    </div>

                    <div class="col-md-9">
                        <ags-editor asp-for="IsApproved" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



