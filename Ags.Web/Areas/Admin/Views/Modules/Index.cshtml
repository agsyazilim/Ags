@model IEnumerable<Ags.Data.Domain.Common.Modules>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-header">
                <a asp-action="Create" class="btn btn-warning">Yeni Oluştur</a>
            </div>
            <div class="box-body">
                <table class="table table-bordered table-hover">
                    <thead class="table-header">
                        <tr>

                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Published)
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Published)
                                </td>

                                <td>

                                    <div class="btn-group">
                                        <button type="button" class="btn btn-warning">işlemler</button>
                                        <button type="button" class="btn btn-warning dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                            <span class="caret"></span>
                                            <span class="sr-only">Toggle Dropdown</span>
                                        </button>
                                        <ul class="dropdown-menu" role="menu">
                                            <li><a asp-action="Edit" asp-route-id="@item.Id">Güncelle</a></li>
                                            <li> <a asp-action="Delete" asp-route-id="@item.Id">Sil</a></li>

                                        </ul>
                                    </div>



                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="box-footer">
                <a asp-action="Create" class="btn btn-warning">Yeni Oluştur</a>
            </div>
        </div>

    </div>

</div>


