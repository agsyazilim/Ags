@model PollModel

<div class="panel-group">
    <div class="panel panel-default">
        <div class="panel-body">

            <div class="form-group">
                <div class="col-md-3">
                    <ags-label asp-for="Name" />
                </div>
                <div class="col-md-9">
                    <ags-editor asp-for="Name" asp-required="true" />
                    <span asp-validation-for="Name"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <ags-label asp-for="SystemKeyword" />
                </div>
                <div class="col-md-9">
                    <ags-editor asp-for="SystemKeyword" />
                    <span asp-validation-for="SystemKeyword"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <ags-label asp-for="Published" />
                </div>
                <div class="col-md-9">
                    <ags-editor asp-for="Published" />
                    <span asp-validation-for="Published"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <ags-label asp-for="ShowOnHomePage" />
                </div>
                <div class="col-md-9">
                    <ags-editor asp-for="ShowOnHomePage" />
                    <span asp-validation-for="ShowOnHomePage"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <ags-label asp-for="AllowGuestsToVote" />
                </div>
                <div class="col-md-9">
                    <ags-editor asp-for="AllowGuestsToVote" />
                    <span asp-validation-for="AllowGuestsToVote"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <ags-label asp-for="DisplayOrder" />
                </div>
                <div class="col-md-9">
                    <ags-editor asp-for="DisplayOrder" />
                    <span asp-validation-for="DisplayOrder"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <ags-label asp-for="StartDate" />
                </div>
                <div class="col-md-9">
                    <ags-editor asp-for="StartDate" />
                    <span asp-validation-for="StartDate"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <ags-label asp-for="EndDate" />
                </div>
                <div class="col-md-9">
                    <ags-editor asp-for="EndDate" />
                    <span asp-validation-for="EndDate"></span>
                </div>
            </div>

        </div>
    </div>
</div>