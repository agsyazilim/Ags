@model PollModel

@{
    //page title
    ViewBag.Title = "EditPollDetails";
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Polls");
}

<form asp-controller="Poll" asp-action="Edit" method="post">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            Düzenleniyor - @Model.Name
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="List">Geri Dön</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
               Kaydet
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
               Kaydet ve Düzenle
            </button>
            <span id="poll-delete" class="btn bg-red">
                <i class="fa fa-trash-o"></i>
               Sil
            </span>
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>
<ags-delete-confirmation asp-model-id="@Model.Id" asp-button-id="poll-delete" />
