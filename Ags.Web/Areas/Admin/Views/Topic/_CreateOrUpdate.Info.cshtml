@model TopicModel

<div class="panel-group">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="form-group">
                <div class="col-md-3">
                    <ags-label asp-for="Title" />
                </div>
                <div class="col-md-9">
                    <ags-editor asp-for="Title" />
                    <span asp-validation-for="Title"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <ags-label asp-for="Body" />
                </div>
                <div class="col-md-9">
                    <ags-editor asp-for="Body" asp-template="RichEditor" />
                    <span asp-validation-for="Body"></span>
                </div>
            </div>
        </div>

        <div class="form-group advanced-setting">
            <div class="col-md-3">
                <ags-label asp-for="SystemName" />
            </div>
            <div class="col-md-9">
                <ags-editor asp-for="SystemName" />
                <span asp-validation-for="SystemName"></span>
            </div>
        </div>
        @if (Model.Id > 0)
        {
            <div class="form-group">
                <div class="col-md-3">
                    <ags-label asp-for="Url" />
                </div>
                <div class="col-md-9">
                    <a href="@Model.Url">@Model.Url</a>
                </div>
            </div>
        }
        <div class="form-group advanced-setting">
            <div class="col-md-3">
                <ags-label asp-for="Published" />
            </div>
            <div class="col-md-9">
                <ags-editor asp-for="Published" />
                <span asp-validation-for="Published"></span>
            </div>
        </div>
        <div class="form-group" style="display: none">
            <div class="col-md-3">
                <ags-label asp-for="IsPasswordProtected" />
            </div>
            <div class="col-md-9">
                <ags-editor asp-for="IsPasswordProtected" />
                <span asp-validation-for="IsPasswordProtected"></span>
            </div>
        </div>
        <nop-nested-setting asp-for="IsPasswordProtected">
            <div class="form-group" style="display: none" id="pnlPasswordEnabled">
                <div class="col-md-3">
                    <ags-label asp-for="Password" />
                </div>
                <div class="col-md-9">
                    <ags-editor asp-for="Password" />
                    <span asp-validation-for="Password"></span>
                </div>
            </div>
        </nop-nested-setting>
        <div class="form-group">
            <div class="col-md-3">
                <ags-label asp-for="IncludeInTopMenu" />
            </div>
            <div class="col-md-9">
                <ags-editor asp-for="IncludeInTopMenu" />
                <span asp-validation-for="IncludeInTopMenu"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                <ags-label asp-for="IncludeInFooterColumn1" />
            </div>
            <div class="col-md-9">
                <ags-editor asp-for="IncludeInFooterColumn1" />
                <span asp-validation-for="IncludeInFooterColumn1"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                <ags-label asp-for="IncludeInFooterColumn2" />
            </div>
            <div class="col-md-9">
                <ags-editor asp-for="IncludeInFooterColumn2" />
                <span asp-validation-for="IncludeInFooterColumn2"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                <ags-label asp-for="IncludeInFooterColumn3" />
            </div>
            <div class="col-md-9">
                <ags-editor asp-for="IncludeInFooterColumn3" />
                <span asp-validation-for="IncludeInFooterColumn3"></span>
            </div>
        </div>
        <div class="form-group advanced-setting">
            <div class="col-md-3">
                <ags-label asp-for="IncludeInSitemap" />
            </div>
            <div class="col-md-9">
                <ags-editor asp-for="IncludeInSitemap" />
                <span asp-validation-for="IncludeInSitemap"></span>
            </div>
        </div>


        <div class="form-group advanced-setting">
            <div class="col-md-3">
                <ags-label asp-for="DisplayOrder" />
            </div>
            <div class="col-md-9">
                <ags-editor asp-for="DisplayOrder" />
                <span asp-validation-for="DisplayOrder"></span>
            </div>
        </div>
        <div class="form-group advanced-setting">
            <div class="col-md-3">
                <ags-label asp-for="AccessibleWhenStoreClosed" />
            </div>
            <div class="col-md-9">
                <ags-editor asp-for="AccessibleWhenStoreClosed" />
                <span asp-validation-for="AccessibleWhenStoreClosed"></span>
            </div>
        </div>
        <div class="form-group advanced-setting" @(Model.AvailableTopicTemplates.SelectionIsNotPossible() ? Html.Raw("style=\"display:none\"") : null)>
            <div class="col-md-3">
                <ags-label asp-for="TopicTemplateId" />
            </div>
            <div class="col-md-9">
                <ags-select asp-for="TopicTemplateId" asp-items="Model.AvailableTopicTemplates" />
                <span asp-validation-for="TopicTemplateId"></span>
            </div>
        </div>
    </div>
</div>
