@model CategoryModel
@{
    //page title
    ViewBag.Title = "Kategori Duzenle";
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Categories");
}

<form asp-controller="Category" asp-action="Edit" method="post" id="category-form">
    <div class="content-header clearfix">
        <h1 class="pull-left">
             @Model.Name  - Kategorisini Guncelle
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="List">Listeye Git</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="button" onclick="javascript:OpenWindow('@Url.Action("Category","Catalog",new{id=Model.Id,title=Model.SeName})', 800, 600, true);return false;" class="btn bg-purple">
                <i class="fa fa-eye"></i>
                  Sayfaya Bak
            </button>
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                Kaydet
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
               Kaydet ve Devam Et
            </button>
            <span id="category-delete" class="btn bg-red">
                <i class="fa fa-trash-o"></i>
               Sil
            </span>
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>
<ags-delete-confirmation asp-model-id="@Model.Id" asp-button-id="category-delete" />
