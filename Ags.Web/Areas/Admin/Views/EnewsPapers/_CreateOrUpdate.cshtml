@model ENewsItemModel

@{
    ViewData["Title"] = "Create";
}

<div class="content">
    <div class="form-horizontal">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-3">
                        <ags-label asp-for="PictureId" />
                    </div>
                    <div class="col-md-9">
                        <ags-editor asp-for="PictureId" />
                        <span asp-validation-for="PictureId"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <ags-label asp-for="Name" />
                    </div>
                    <div class="col-md-9">
                        <ags-editor asp-for="Name" />
                        <span asp-validation-for="Name"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <ags-label asp-for="SelectedCategoryId" />
                    </div>
                    <div class="col-md-9">
                        <ags-select asp-for="SelectedCategoryId" asp-items="@Model.AvailableCategories" />
                        <span asp-validation-for="SelectedCategoryId"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <ags-label asp-for="SeName" />
                    </div>
                    <div class="col-md-9">
                        <ags-editor asp-for="SeName" />
                        <span asp-validation-for="SeName"></span>
                    </div>
                </div>
                <script>
                        $(document).ready(function() {
                            $('#@Html.IdFor(model => model.SeName)').on('input propertychange paste',
                                function() {
                                    var parameters = {
                                        entityId: '@Model.Id',
                                        entityName: 'ENewsPaper',
                                        seName: $(this).val()
                                    };
                                    warningValidation('@Url.Action("UrlReservedWarning", "Common")',
                                        '@Html.NameFor(model => model.SeName)',
                                        parameters);
                                });
                        });
                </script>
            </div>
        </div>
    </div>
</div></div>
