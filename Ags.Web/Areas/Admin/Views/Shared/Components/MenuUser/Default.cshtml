@inject IPictureService pictureService
@inject UserManager<ApplicationUser> userManager;
<li class="dropdown user user-menu">
    <!-- Menu Toggle Button -->
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <!-- The user image in the navbar-->
        <img src="@pictureService.GetPictureUrl(Convert.ToInt32(User.GetUserProperty(CustomClaimTypes.PictureId)),120)" class="user-image" alt="ui">
        <!-- hidden-xs hides the username on small devices so only the image appears. -->
        <span class="hidden-xs">@User.GetUserProperty(CustomClaimTypes.Name) @User.GetUserProperty(CustomClaimTypes.Surname)</span>
    </a>
    <ul class="dropdown-menu">
        <!-- The user image in the menu -->
        <li class="user-header">
            <img src="@pictureService.GetPictureUrl(Convert.ToInt32(User.GetUserProperty(CustomClaimTypes.PictureId)),120)" class="img-circle" alt="User Image">
            <p>
                @User.GetUserProperty(CustomClaimTypes.Name) @User.GetUserProperty(CustomClaimTypes.Surname)
                - @User.GetUserProperty(CustomClaimTypes.Position)
                <small>Kayıt Tarihi @User.GetUserProperty(CustomClaimTypes.DateRegistered)</small>
            </p>
        </li>
        <!-- Menu Body -->
        <li class="user-body">
            @*<div class="row">
                <div class="col-xs-4 text-center">
                    <a href="#">Followers</a>
                </div>
                <div class="col-xs-4 text-center">
                    <a href="#">Sales</a>
                </div>
                <div class="col-xs-4 text-center">
                    <a href="#">Friends</a>
                </div>
            </div>*@
            <!-- /.row -->
        </li>
        <!-- Menu Footer-->
        <li class="user-footer">
            <div class="pull-left">
                <a href="@Url.Action("Edit","Customer",new{id=userManager.FindByNameAsync(User.Identity.Name).Result.Id})" class="btn btn-default btn-flat">Kullanıcı Gör</a>
            </div>
            <div class="pull-right">
                <form asp-controller="Account" asp-action="LogOff" method="post">
                    <button type="submit" class="btn btn-default btn-flat">Çıkış</button>
                </form>
            </div>
        </li>
    </ul>
</li>