@model bool?
<input asp-for="@Model" />
@{
    var postfix = "";
    if (ViewData.ContainsKey("postfix") && ViewData["postfix"] != null)
    {
        postfix = ViewData["postfix"].ToString();
    }
}
<script>
    $(document).ready(function() {
        $("#@Html.IdForModel()").kendoSwitch({
            messages: {
                checked: "EVET",
                unchecked: "HAYIR"
            }
        });
    });
</script>