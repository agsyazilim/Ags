@model AdminRegisterViewModel
@{
    ViewData["Title"] = "Güncelle";
}

<form asp-action="Edit" class="form-horizontal">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="content-header clearfix">
        <h1 class="pull-left">
            Güncelle
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="Index">Listeye Dön</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                Güncelle
            </button>
        </div>
    </div>
    <div class="content">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-md-3">
                            <ags-label asp-for="AvatarId" />
                        </div>
                        <div class="col-md-9">
                            <ags-editor asp-for="AvatarId" />
                            <span asp-validation-for="AvatarId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <ags-label asp-for="FirstName" />
                        </div>
                        <div class="col-md-9">
                            <ags-editor asp-for="FirstName" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <ags-label asp-for="LastName" />
                        </div>
                        <div class="col-md-9">
                            <ags-editor asp-for="LastName" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <ags-label asp-for="NickName" />
                        </div>
                        <div class="col-md-9">
                            <ags-editor asp-for="NickName" />
                            <span asp-validation-for="NickName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <ags-label asp-for="Phone" />
                        </div>
                        <div class="col-md-9">
                            <ags-editor asp-for="Phone" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <ags-label asp-for="FacebookLink" />
                        </div>
                        <div class="col-md-9">
                            <ags-editor asp-for="FacebookLink" />
                            <span asp-validation-for="FacebookLink" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <ags-label asp-for="InstagramLink" />
                        </div>
                        <div class="col-md-9">
                            <ags-editor asp-for="InstagramLink" />
                            <span asp-validation-for="InstagramLink" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <ags-label asp-for="TwitterLink" />
                        </div>
                        <div class="col-md-9">
                            <ags-editor asp-for="TwitterLink" />
                            <span asp-validation-for="TwitterLink" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <ags-label asp-for="Email" />
                        </div>
                        <div class="col-md-9">
                            <ags-editor asp-for="Email" asp-disabled="true"/>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <ags-label asp-for="SelectedUserRoleId" />
                        </div>
                        <div class="col-md-9">
                            <ags-select asp-for="SelectedUserRoleId" asp-items="@Model.IdentityRoles" asp-required="true"/>
                            <span asp-validation-for="SelectedUserRoleId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <input asp-for="Id" type="hidden"/>
</form>

