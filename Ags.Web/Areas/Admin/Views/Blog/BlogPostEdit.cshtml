
@model BlogPostModel
@{
    //page title
    ViewBag.Title = "EditBlogPostDetails";
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Blog");
}
<ags-antiforgery-token />

<form asp-controller="Blog" asp-action="BlogPostEdit" method="post">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            EditBlogPostDetails - @Model.Title
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="List">Listeye Dön</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="button" onclick="javascript:OpenWindow('@Url.RouteUrl("BlogPost", new {SeName = Model.SeName})', 800, 600, true); return false;" class="btn bg-purple">
                <i class="fa fa-eye"></i>
                Sayfaya Bak
            </button>
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                Kaydet
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                Kaydet Düzenle
            </button>
            <span id="blogpost-delete" class="btn bg-red">
                <i class="fa fa-trash-o"></i>
                Sil
            </span>
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>
<ags-delete-confirmation asp-model-id="@Model.Id" asp-button-id="blogpost-delete" />