@model BlogPostSearchModel

<ags-antiforgery-token/>
<div class="content-header clearfix">
    <div class="pull-right">
        <a asp-action="BlogPostCreate" class="btn bg-blue">
            <i class="fa fa-plus-square"></i>
            Yeni Ekle
        </a>
    </div>
</div>
<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
           <div class="panel panel-default">
                <div class="panel-body">
                    <div id="blogpost-grid"></div>
                    <script>
                        $(document).ready(function() {
                            $("#blogpost-grid").kendoGrid({
                                dataSource: {
                                    type: "json",
                                    transport: {
                                        read: {
                                            url: "@Html.Raw(Url.Action("List", "Blog"))",
                                            type: "POST",
                                            dataType: "json",
                                            data: function () {
                                                var data = {

                                                };
                                                addAntiForgeryToken(data);
                                                return data;
                                            }
                                        }
                                    },
                                    schema: {
                                        data: "Data",
                                        total: "Total",
                                        errors: "Errors"
                                    },
                                    error: function(e) {
                                        display_kendoui_grid_error(e);
                                        // Cancel the changes
                                        this.cancelChanges();
                                    },
                                    pageSize: @(Model.PageSize),
                                    serverPaging: true,
                                    serverFiltering: true,
                                    serverSorting: true
                                },
                                pageable: {
                                    refresh: true,
                                    pageSizes: [@(Model.AvailablePageSizes)],
                                    @await Html.PartialAsync("_GridPagerMessages")
                                },
                                editable: {
                                    confirmation: "DeleteConfirmation",
                                    mode: "inline"
                                },
                                scrollable: false,
                                columns: [
                                {
                                    field: "Title",
                                    title: "Başlık"
                                }, {
                                    title: "Yorum",
                                    headerAttributes: { style: "text-align:center" },
                                    attributes: { style: "text-align:center" },
                                    template: '<a class="btn btn-default" href="List?tabNameToSelect=blog-comments&filterByBlogPostId=#=Id#">Comments - #=ApprovedComments + NotApprovedComments# (#=NotApprovedComments#)</a>'
                                }, {
                                    field: "StartDate",
                                    title: "Başlangıç Tarihi",
                                    width: 200,
                                    type: "date",
                                    format: "{0:G}"
                                }, {
                                    field: "EndDate",
                                    title: "Bitiş Tarihi",
                                    width: 200,
                                    type: "date",
                                    format: "{0:G}"
                                }, {
                                    field: "CreatedOn",
                                    title: "Oluşturma",
                                    width: 200,
                                    type: "date",
                                    format: "{0:G}"
                                }, {
                                    field: "Id",
                                    title: "Düzenle",
                                    width: 100,
                                    headerAttributes: { style: "text-align:center" },
                                    attributes: { style: "text-align:center" },
                                    template: '<a class="btn btn-default" href="BlogPostEdit/#=Id#"><i class="fa fa-pencil"></i>Düzenle</a>'
                                    }
                                ]
                            });
                        });
                    </script>

                    <script>
                        $(document).ready(function () {
                            //search button
                            $('#search-blogpost').click(function () {
                                //search
                                var grid = $('#blogpost-grid').data('kendoGrid');
                                grid.dataSource.page(1); //new search. Set page size to 1
                                //grid.dataSource.read(); we already loaded the grid above using "page" function
                                return false;
                            });
                        });
                    </script>
                </div>
            </div>
        </div>
    </div>
</div>