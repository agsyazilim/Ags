@model EditorListModel
@{
    ViewData["Title"] = "Yazar Listesi";
    Layout = "_OneColumn";
}

@section banner{
    <div class="page-banner-section section mt-30 mb-30" data-title="EditorList">
        <div class="container">
            <div class="row row-1">
                <div class="col-12">
                    <div class="page-banner" style="background-image: url(/images/uploaded/categori/asyis.jpg)">
                        <h2>Tüm Haberler</h2>
                        <ol class="page-breadcrumb">
                            <li><a href="#">Anasayfa</a></li>
                            <li class="active">Tüm Haberler</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<div class="post-block-wrapper" data-title="EditorList">
    <div class="head">
        <h4 class="title">Yazarlarımız</h4>
    </div>
    <div class="body">
        @{
            @:<div class="col-md-6">
                var count = 0;
                foreach (var item in Model.EditorModels)
                {
                    if (count % 2 == 0)
                    {
                    @:</div><div>
                    }
                    <div class="post-author fix mb-50">
                        <div class="image float-left">
                            <img src="@item.AvatarUrl" alt="@item.FirstName">
                        </div>
                        <div class="content fix">
                            <h5><a href="@Url.Action("List", "Editor", new {editorId = item.EditorId})">@item.FirstName @item.LastName</a></h5>
                            <h3>
                                <a href="@Url.Action("BlogPost", "Editor", new {blogPostId = item.BlogPostModel.Id})">
                                    @item.BlogPostModel.Title
                                </a>
                            </h3>
                            <p>@item.BlogPostModel.BodyOverview</p>
                            <div class="social">
                                <a href="@item.FaceBookLink" target="_blank"><i class="fa fa-facebook"></i></a>
                                <a href="@item.TwitterLink" target="_blank"><i class="fa fa-twitter"></i></a>
                                <a href="@item.InstagramLink" target="_blank"><i class="fa fa-instagram"></i></a>
                                <a href="mailto:@item.Email"><i class="fa fa-envelope"></i></a>
                                <a href="@Url.Action("List", "Editor", new {editorId = item.EditorId})" class="read-more">
                                    Tüm Yazıları
                                </a>
                            </div>
                        </div>
                    </div>
                }
            @:</div>
        }
    </div>
</div>

@section PostSectionLeft{
    @await Component.InvokeAsync("PostSectionLeft").ConfigureAwait(false)
}
@section PostSectionRigth {
    @await Component.InvokeAsync("PostSectionRigth").ConfigureAwait(false)
}
