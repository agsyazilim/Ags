@using Ags.Data.Domain
@using Microsoft.AspNetCore.Identity
@model Ags.Web.Models.AccountViewModels.LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager
@{
    ViewData["Title"] = "Log in";
    Layout = "";
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Kınık Haber | Giriş</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <environment names="Development">
        <link rel="stylesheet" href="~/tema/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/tema/lib/font-awesome/css/font-awesome.css" />
        <link rel="stylesheet" href="~/tema/lib/Ionicons/css/ionicons.css" />
        <link rel="stylesheet" href="~/css/animation.css" />
        <link rel="stylesheet" href="~/tema/css/login.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/tema/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/tema/lib/font-awesome/css/font-awesome.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/tema/lib/Ionicons/css/ionicons.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/animation.css" />
        <link rel="stylesheet" href="~/tema/css/login.css" />

    </environment>
</head>
<body id="signin_main" class="authenty signin-main">
<div class="section-content">
    <div class="wrap">
        <div class="container">
            <div class="form-wrap">
                <div class="row">
                    <div class="title animated fadeInDown">
                        <h1>Kınık Haber</h1>
                        <h5>Giriş Yapın</h5>
                    </div>
                    <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                        <div>
                            <div class="form-header">
                                @*<i class="fa fa-user"></i>*@
                                <img src="/tema/img/logo.png" alt="Logo" width="260" height="90">
                            </div>
                            <div class="form-main">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    @*<label asp-for="Email" class="col-md-2 control-label"></label>*@
                                    <input asp-for="Email" type="text" placeholder="Email" class="form-control" />
                                    @*<span asp-validation-for="Email" class="text-danger"></span>*@
                                    @*<label asp-for="Password" class="col-md-2 control-label"></label>*@
                                    <input asp-for="Password" placeholder="Password" class="form-control" />
                                    @*<span asp-validation-for="Password" class="text-danger"></span>*@
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-block signin" type="submit">Giriş Yap</button>
                                    <div>
                                        <div class="checkbox">
                                            <label class="text-muted">
                                                <input asp-for="RememberMe" />
                                                @Html.DisplayNameFor(m => m.RememberMe)
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-footer">
                                <div class="row">
                                    <div class="col-xs-7">
                                        <i class="fa fa-unlock-alt"></i>
                                        <a asp-action="ForgotPassword">Şifremi Unuttum?</a>
                                    </div>
                                    <div class="col-xs-5">
                                        <i class="fa fa-check"></i>
                                        <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Kayıt Ol</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

    <environment names="Development">
        <script src="~/tema/lib/jquery/dist/jquery.js" asp-append-version="true"></script>
        <script src="~/tema/lib/bootstrap/dist/js/bootstrap.js" asp-append-version="true"></script>
        <script src="~/tema/js/adminlte.js" asp-append-version="true"></script>

    </environment>
    <environment names="Staging,Production">
        <script src="~/tema/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
        <script src="~/tema/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
        <script src="~/tema/js/adminlte.min.js" asp-append-version="true"></script>

    </environment>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial").ConfigureAwait(false);
    }
</body>
</html>