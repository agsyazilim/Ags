@using Ags.Web.Infrastructure
@model CategoriModel
<div class="col-lg-4 col-md-6 col-12 mb-50" data-title="CategoryNews">
    <div class="post-block-wrapper">
        <div class="head gadgets-head">
            <h4 class="title">@Model.Name</h4>
        </div>
        <div class="body">
            <div class="sidebar-post-carousel post-block-carousel gadgets-post-carousel">
                @foreach (var item in Model.NewsModels)
                {
                    <div class="post gadgets-post">
                        <div class="post-wrap">
                            <a class="image" href="@Url.Action("Index", "News", new {id = item.Id, title = item.SeName})">
                                <img src="@item.PictureUrl" alt="post">
                            </a>
                            <div class="content">
                                <h4 class="title"><a href="@Url.Action("Index","News",new{id=item.Id,title=item.SeName})">@item.Short.Chop("100")</a></h4>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div align="center"><h5><a href="@Url.Action("List","News")">Tüm Haberler</a></h5></div>
    </div>
</div>
