@model CategoriModel
<div class="col-lg-4 col-md-6 col-12 mb-50" data-title="MainPageDownCenter">
    <div class="post-block-wrapper">
        <div class="head madical-head">
            <h4 class="title">@Model.Name</h4>
        </div>
        <div class="body">
            <div class="two-row-post-carousel row-post-carousel post-block-carousel madical-post-carousel">
                @foreach (var items in Model.LargeNewsModels)
                {
                    <div class="post madical-post">
                        <div class="post-wrap">
                            <a class="image" href="@Url.Action("Index", "News", new {id = items.Id, title = items.SeName})">
                                <img src="@items.PictureUrl" alt="post">
                            </a>
                            <div class="content">
                                <h4 class="title">
                                    <a href="@Url.Action("Index", "News", new {id = items.Id, title = items.SeName})">@items.Title</a>
                                </h4>
                            </div>

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
